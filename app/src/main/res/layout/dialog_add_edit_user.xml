<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm tài khoản mới"
            android:textSize="24sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="24dp" />

        <!-- User Avatar Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/imgUserAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="#F5F5F5"
                    android:src="@drawable/ic_person" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Basic Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin cơ bản"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <!-- Email -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#DC3545"
            app:hintTextColor="#DC3545"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email *"
                android:inputType="textEmailAddress"
                android:textSize="16sp"
                android:textColor="#212121"
                android:textColorHint="#757575"
                android:fontFamily="sans-serif" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Display Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#DC3545"
            app:hintTextColor="#DC3545"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="8dp"
            app:boxCornerRadiusTopEnd="8dp"
            app:boxCornerRadiusBottomStart="8dp"
            app:boxCornerRadiusBottomEnd="8dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDisplayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên hiển thị *"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:textColor="#212121"
                android:textColorHint="#757575"
                android:fontFamily="sans-serif" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Role Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phân quyền"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <!-- Role Spinner -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeColor="#DC3545"
            app:strokeWidth="1dp"
            android:layout_marginBottom="16dp">

            <Spinner
                android:id="@+id/spnRole"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="1dp"
                android:padding="16dp"
                android:background="@android:color/transparent" />

        </androidx.cardview.widget.CardView>

        <!-- Cinema Assignment (Conditional) -->
        <TextView
            android:id="@+id/tvAssignedCinemaLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phân công rạp chiếu"
            android:textSize="18sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:id="@+id/tilCinema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:strokeColor="#DC3545"
            app:strokeWidth="1dp"
            android:layout_marginBottom="32dp"
            android:visibility="gone">

            <Spinner
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:id="@+id/spnCinema"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="1dp"
                android:padding="16dp"

                android:background="@android:color/transparent" />

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Hủy"
                android:textSize="14sp"
                android:textColor="#DC3545"
                android:backgroundTint="@android:color/transparent"
                android:layout_marginEnd="12dp"
                app:strokeColor="#DC3545"
                app:strokeWidth="1dp"
                app:cornerRadius="6dp"
                app:rippleColor="#DC354533"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Lưu"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#DC3545"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                app:cornerRadius="6dp"
                app:rippleColor="#FFFFFF33"
                style="@style/Widget.MaterialComponents.Button" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>