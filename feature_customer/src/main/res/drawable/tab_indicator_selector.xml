<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state: red dot -->
    <item android:state_selected="true">
        <shape android:shape="oval">
            <solid android:color="#FFFF0000" /> <!-- Red color for the selected dot -->
            <size android:width="8dp" android:height="8dp" /> <!-- Size of the dot -->
        </shape>
    </item>
    <!-- Default state: white dot -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white" /> <!-- White color for unselected dots -->
            <size android:width="8dp" android:height="8dp" /> <!-- Size of the dot -->
        </shape>
    </item>
</selector>
