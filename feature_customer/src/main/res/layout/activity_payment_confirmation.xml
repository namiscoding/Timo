<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp"
    tools:context=".ui.activity.PaymentConfirmationActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="64dp"
        android:contentDescription="Success Icon"
        android:src="@drawable/ic_check_circle" />

    <TextView
        android:id="@+id/tvConfirmationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Thanh toán thành công!"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvBookingId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        tools:text="Mã đơn hàng: ABCDEF12345" />

    <TextView
        android:id="@+id/tvFilmTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="Phim: Lật Mặt 7" />
    <TextView
        android:id="@+id/tvShowtimeDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giờ chiếu: HH:mm - dd/MM/yyyy"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/tvSeatsDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghế: A1, A2"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tvFoodDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đồ ăn: Bắp (x1), Nước (x2)"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginTop="4dp"/>
    <TextView
        android:id="@+id/tvFinalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="Tổng cộng: 250.000 đ" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btnViewTickets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:text="Xem vé của tôi"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnBackToHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark_gray"
        android:text="Quay về trang chủ"
        android:textColor="@color/white"
        android:textSize="18sp" />

</LinearLayout>