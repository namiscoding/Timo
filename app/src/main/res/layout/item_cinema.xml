<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/black"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Arrow Icon - Fixed to the right, vertically centered within the card -->
        <ImageView
            android:id="@+id/arrowIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/arrow_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/white"
            android:contentDescription="View Details" />

        <!-- Cinema Name - Spans from left to the arrow, with a small margin -->
        <TextView
            android:id="@+id/cinemaName"
            android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="AMC Empire 25"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/arrowIcon"
        android:layout_marginEnd="8dp"
        tools:text="AMC Empire 25 Long Name Example" />

        <!-- Cinema Address - Starts aligned with cinemaName, chained with distance -->
        <TextView
            android:id="@+id/cinemaAddress"
            android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3725 Quince St"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/cinemaName"
        app:layout_constraintTop_toBottomOf="@+id/cinemaName"
        app:layout_constraintEnd_toStartOf="@+id/cinemaDistance"
        app:layout_constraintHorizontal_chainStyle="packed"
        tools:text="3725 Quince St, Some City, State" />

        <!-- Cinema Distance - Follows cinemaAddress on the same line, aligned by baseline -->
        <TextView
            android:id="@+id/cinemaDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0 km"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/cinemaAddress"
            app:layout_constraintBaseline_toBaselineOf="@+id/cinemaAddress"
        app:layout_constraintEnd_toStartOf="@+id/arrowIcon"
        tools:text="0.5 km" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
