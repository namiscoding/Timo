<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"  android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp">

    <ImageView
        android:id="@+id/imageViewSliderPoster"
        android:layout_width="0dp"  android:layout_height="250dp" android:background="@drawable/rounded_image_bg"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textViewSliderTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:gravity="center"
        android:paddingStart="4dp"  android:paddingEnd="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp" android:textColor="@color/white"
        android:textSize="14sp" android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewSliderPoster"
        app:layout_constraintStart_toStartOf="@+id/imageViewSliderPoster"
        app:layout_constraintEnd_toEndOf="@+id/imageViewSliderPoster"
        tools:text="Awesome Film Title That Can Be Quite Long" />

</androidx.constraintlayout.widget.ConstraintLayout>