<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFC107" /> <corners android:radius="8dp" />
            <size android:width="30dp" android:height="30dp"/>
            <padding android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp"/>
        </shape>
    </item>
    <item android:top="-15dp" android:bottom="15dp" android:left="5dp" android:right="5dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFA000" /> <corners android:topRightRadius="8dp" android:topLeftRadius="8dp"/>
            <size android:width="20dp" android:height="10dp"/>
        </shape>
    </item>
</layer-list>