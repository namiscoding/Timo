<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Timo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="Theme.Timo.Manager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/cinemax_dark_gray</item>
        <item name="colorPrimaryVariant">@color/cinemax_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/cinemax_red</item>
        <item name="colorSecondaryVariant">@color/cinemax_red</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:windowBackground">@color/cinemax_black</item>
        <item name="android:colorBackground">@color/cinemax_black</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/cinemax_light_gray</item>

        <item name="android:buttonStyle">@style/Cinemax.Button</item>
        <item name="editTextStyle">@style/Cinemax.EditText</item>
        <item name="spinnerStyle">@style/Cinemax.Spinner</item>
    </style>

    <style name="Cinemax.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/cinemax_red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Cinemax.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext_themed</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/cinemax_light_gray</item>
    </style>

    <style name="Cinemax.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/bg_spinner_themed</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>