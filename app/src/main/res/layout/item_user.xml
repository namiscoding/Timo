<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#181A20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="horizontal">

        <!-- User Avatar -->
        <androidx.cardview.widget.CardView
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="2dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#DCDCDC"
                android:src="@drawable/ic_person" />

        </androidx.cardview.widget.CardView>

        <!-- User Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Email -->
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="user@example.com"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="4dp" />

            <!-- Role -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_role"
                    android:layout_marginEnd="6dp"
                    android:layout_gravity="center_vertical"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/tvRole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vai trò"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Cinema Assignment -->
            <LinearLayout
                android:id="@+id/layoutCinema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_location"
                    android:layout_marginEnd="6dp"
                    android:layout_gravity="center_vertical"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/tvCinema"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rạp được gán (nếu có)"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Sửa"
                    android:textSize="12sp"
                    android:textColor="#FC3323"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_marginEnd="8dp"
                    app:strokeColor="#FC3323"
                    app:strokeWidth="1dp"
                    app:cornerRadius="6dp"
                    app:rippleColor="#DC354533"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDelete"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Xóa"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FC3323"
                    app:cornerRadius="6dp"
                    app:rippleColor="#FFFFFF33"
                    style="@style/Widget.MaterialComponents.Button" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>